<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
      integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="../public/assets/css/style.css"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="../public/assets/css/table.css"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="../public/assets/css/popup-form.css"
    />
    <script src="../public/dependencies/js/index.global.min.js"></script>
    <script src="../public/dependencies/js/index2.global.min.js"></script>
    <script src="../public/js/eventClaender.js"></script>
    <script src="../public/dependencies/js/apexcharts.js"></script>
    <title>CPJ ERP - Admin</title>
  </head>

  <body>
    <!-- forms popup -->
    <div class="popup-form admin-add">
      <i class="fa-solid fa-square-xmark"></i>
      <div class="registration-form">
        <h2>Add Admin</h2>
        <form action="/admin/addAdmin" method="post">
          <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required />
          </div>
          <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required />
          </div>
          <div class="form-group">
            <label for="mobile">Mobile Number:</label>
            <input type="tel" id="mobile" name="mobile" required />
          </div>
          <div class="form-group">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required />
          </div>
          <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required />
          </div>
          <div class="form-group">
            <input type="submit" value="Add" />
          </div>
        </form>
      </div>
    </div>

    <div class="popup-form teacher-add">
      <i class="fa-solid fa-square-xmark"></i>
      <div class="registration-form">
        <h2>Add Teacher</h2>
        <form action="/admin/addTeacher" method="post">
          <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required />
          </div>
          <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required />
          </div>
          <div class="form-group">
            <label for="mobile">Mobile Number:</label>
            <input type="tel" id="mobile" name="mobile" required />
          </div>
          <div class="form-group">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required />
          </div>
          <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required />
          </div>
          <div class="form-group">
            <input type="submit" value="Add" />
          </div>
        </form>
      </div>
    </div>

    <div class="popup-form student-add">
      <i class="fa-solid fa-square-xmark"></i>
      <div class="registration-form">
        <h2>Add Student</h2>
        <form action="/admin/addStudent" method="post">
          <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required />
          </div>
          <div class="form-group">
            <label for="batchClass">Class:</label>
            <input type="text" id="batchClass" name="batchClass" required />
          </div>
          <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required />
          </div>
          <div class="form-group">
            <label for="mobile">Mobile Number:</label>
            <input type="tel" id="mobile" name="mobile" required />
          </div>
          <div class="form-group">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required />
          </div>
          <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" />
          </div>
          <div class="form-group">
            <input type="submit" value="Add" />
          </div>
        </form>
      </div>
    </div>

    <div class="popup-form course-add">
      <i class="fa-solid fa-square-xmark"></i>
      <div class="registration-form">
        <h2>Add Course</h2>
        <form action="/admin/addCourse" method="post">
          <div class="form-group">
            <label for="courseId">Course ID:</label>
            <input type="text" id="course-id" name="courseId" required />
          </div>
          <div class="form-group">
            <label for="courseName">Course Name:</label>
            <input type="text" id="name" name="courseName" required />
          </div>
          <div class="form-group">
            <label for="totalSems">Total Semesters:</label>
            <input type="text" id="semsester" name="totalSems" required />
          </div>
          <div class="form-group">
            <label for="totalCredits">Total Credits:</label>
            <input type="text" id="credits" name="totalCredits" required />
          </div>
          <div class="form-group">
            <input type="submit" value="Add" />
          </div>
        </form>
      </div>
    </div>

    <div class="popup-form time-table-add">
      <i class="fa-solid fa-square-xmark"></i>
      <div class="registration-form">
        <h2>Add Time-Table</h2>
        <form
          action="/admin/addTimeTable"
          method="post"
          enctype="multipart/form-data"
        >
          <div class="form-group">
            <label for="course">Class:</label>
            <input type="text" id="course" name="course" required />
          </div>
          <div class="form-group">
            <label for="semsester">Class:</label>
            <select name="semsester" id="semsester">
              <option value="">Select</option>
              <option value="I">1</option>
              <option value="II">2</option>
              <option value="III">3</option>
              <option value="IV">4</option>
              <option value="V">5</option>
              <option value="VI">6</option>
              <option value="VII">7</option>
              <option value="VIII">8</option>
              <option value="IX">9</option>
              <option value="X">10</option>
            </select>
          </div>
          <div class="form-group">
            <label for="updateDate">Date:</label>
            <input
              type="date"
              id="updateDate"
              class="date"
              name="updateDate"
              required
            />
          </div>
          <div class="form-group">
            <label for="timeTableFile">File:</label>
            <input
              type="file"
              id="timeTableFile"
              name="timeTableFile"
              accept="application/pdf"
              required
            />
          </div>
          <div class="form-group">
            <input type="submit" value="Add" />
          </div>
        </form>
      </div>
    </div>

    <div class="popup-form notice-add">
      <i class="fa-solid fa-square-xmark"></i>
      <div class="registration-form">
        <h2>Add Notice</h2>
        <form
          action="/admin/addNotice"
          method="post"
          enctype="multipart/form-data"
        >
          <div class="form-group">
            <label for="noticeDate">Date:</label>
            <input
              type="date"
              id="noticeDate"
              class="date"
              name="noticeDate"
              required
            />
          </div>
          <div class="form-group">
            <label for="noticeName">Name:</label>
            <input type="text" id="noticeName" name="noticeName" required />
          </div>
          <div class="form-group">
            <label for="noticeFor">Notice for:</label>
            <select name="notice-for" id="notice-for">
              <option value="">Select</option>
              <option value="teachers">Teacher</option>
              <option value="students">Students</option>
              <option value="everyone">Both Teacher & Students</option>
            </select>
          </div>
          <div class="form-group">
            <label for="noticeFile">File:</label>
            <input
              type="file"
              id="noticeFile"
              name="noticeFile"
              accept="application/pdf"
              required
            />
          </div>
          <div class="form-group">
            <input type="submit" value="Add" />
          </div>
        </form>
      </div>
    </div>

    <div class="popup-form event-add">
      <i class="fa-solid fa-square-xmark"></i>
      <div class="registration-form">
        <h2>New Event</h2>
        <form action="/admin/create-event" method="post">
          <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" required />
          </div>
          <div class="form-group">
            <label for="start">Start Date:</label>
            <input type="date" id="start" class="date" name="start" required />
          </div>
          <div class="form-group">
            <label for="end">End Date:</label>
            <input type="date" id="end" class="date" name="end" required />
          </div>
          <div class="form-group">
            <input type="submit" value="Create" />
          </div>
        </form>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="sidebar">
      <a href="#" class="logo">
        <img src="../public/assets/images/cpjLogo.png" alt="CPJ" />
      </a>
      <ul class="side-menu">
        <li class="active inpage">
          <a href="#dashboard"><i class="bx bxs-dashboard"></i>Dashboard</a>
        </li>
        <li class="inpage">
          <a href="#admins"><i class="fa-solid fa-users"></i>Admins</a>
        </li>
        <li class="inpage">
          <a href="#teachers"
            ><i class="fa-solid fa-chalkboard-user"></i>Teachers</a
          >
        </li>
        <li class="inpage">
          <a href="#students"
            ><i class="fa-solid fa-graduation-cap"></i>Students</a
          >
        </li>
        <li class="inpage">
          <a href="#courses"><i class="fa-solid fa-book"></i>Courses</a>
        </li>
        <li class="inpage">
          <a href="#time-table"
            ><i class="fa-solid fa-calendar-days"></i>Time Table</a
          >
        </li>
        <li class="inpage">
          <a href="#notice"><i class="fa-solid fa-file-lines"></i>Notice</a>
        </li>
        <li class="inpage">
          <a href="#events"><i class="fa-solid fa-list"></i>Events</a>
        </li>
        <li class="inpage">
          <a href="#change-password"
            ><i class="fa-solid fa-lock"></i>Change Password</a
          >
        </li>
      </ul>
      <ul class="side-menu">
        <li>
          <a href="/logout" class="logout">
            <i class="fa-solid fa-right-from-bracket"></i>
            Logout
          </a>
        </li>
      </ul>
    </div>
    <!-- End of Sidebar -->

    <!-- Main Content -->
    <div class="content">
      <!-- Navbar -->
      <div
        class="dashboard top-nav"
        style="position: sticky; z-index: 10; top: 0"
      >
        <nav>
          <i class="fa-solid fa-bars"></i>
          <form action="#">
            <div class="form-input">
              <input type="search" placeholder="Search..." />
              <button class="search-btn" type="submit">
                <i class="bx bx-search"></i>
              </button>
            </div>
          </form>
          <input type="checkbox" id="theme-toggle" hidden disabled/>
          <label for="theme-toggle" class="theme-toggle"></label>
          <!-- <a href="#" class="notif">
            <i class="fa-solid fa-bell"></i>
            <span class="count">12</span>
          </a> -->
          <a href="/admin/myProfile" class="profile">
            <img src="../uploads/profileImages/admins/<%= user.profilePic %>" />
          </a>
        </nav>
      </div>

      <!-- End of Navbar -->

      <!-- main sections start here -->
      <main>
        <section class="section dashboard active" id="dashboard">
          <h3 class="section-header">Dashboard</h3>
          <ul class="insights section-in">
            <li>
              <img src="../public/assets/images/student.svg" alt="" />
              <span class="info">
                <h3>2000+</h3>
                <p>Students</p>
              </span>
            </li>
            <li>
              <img src="../public/assets/images/awards.svg" alt="" />
              <span class="info">
                <h3>15+</h3>
                <p>Awards</p>
              </span>
            </li>
            <li>
              <img src="../public/assets/images/departmernt.svg" alt="" />
              <span class="info">
                <h3>3</h3>
                <p>Departments</p>
              </span>
            </li>
            <li>
              <img src="../public/assets/images/revenue.svg" alt="" />
              <span class="info">
                <h3>$6,742</h3>
                <p>Revenue</p>
              </span>
            </li>
          </ul>
          <div class="charts-area section-in">
            <div class="charts" id="donut"></div>
            <div class="charts" id="bar"></div>
          </div>
        </section>

        <section class="section admins" id="admins">
          <h3 class="section-header">Admins</h3>
          <div class="section-in">
            <section class="table__body">
              <table>
                <thead>
                  <tr>
                    <th>Admin ID</th>
                    <th>Username</th>
                    <th>Name</th>
                    <th>Mobile</th>
                    <th>View</th>
                    <th>Delete</th>
                  </tr>
                </thead>
                <tbody>
                  <% admins.forEach(admin=>{ %>
                  <tr>
                    <td><%= admin._id %></td>
                    <td><%= admin.username %></td>
                    <td>
                      <!-- <img src="./assets/images/admin1.jpg" alt="" />Shiv Sagar -->
                      <%= admin.name %>
                    </td>
                    <td><%= admin.mobile %></td>
                    <td>
                      <form action="/view/admin/<%= admin._id %>" method="post">
                        <button type="submit" class="icon-button">
                          <i class="fa-solid fa-eye"></i>
                        </button>
                      </form>
                    </td>
                    <td>
                      <form
                        action="/admin/deleteAdmin/<%= admin._id %>"
                        method="post"
                      >
                        <button type="submit" class="icon-button">
                          <i class="fa-solid fa-trash"></i>
                        </button>
                      </form>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
              <div class="">
                <button
                  type="button"
                  style="float: right"
                  class="btn btn-primary popup-btn add-admin"
                >
                  <i class="fa-solid fa-plus"></i> Add More
                </button>
              </div>
            </section>
          </div>
        </section>

        <section class="section teachers" id="teachers">
          <h3 class="section-header">Teachers</h3>
          <div class="section-in">
            <section class="table__body">
              <table>
                <thead>
                  <tr>
                    <th>Employee ID</th>
                    <th>Username</th>
                    <th>Name</th>
                    <th>Mobile</th>
                    <th>View</th>
                    <th>Delete</th>
                  </tr>
                </thead>
                <tbody>
                  <% teachers.forEach(teacher=>{ %>
                  <tr>
                    <td><%= teacher._id %></td>
                    <td><%= teacher.username %></td>
                    <td>
                      <!-- <img src="./assets/images/admin1.jpg" alt="" />Shiv Sagar -->
                      <%= teacher.name %>
                    </td>
                    <td><%= teacher.mobile %></td>
                    <td>
                      <form
                        action="/view/teacher/<%= teacher._id %>"
                        method="post"
                      >
                        <button type="submit" class="icon-button">
                          <i class="fa-solid fa-eye"></i>
                        </button>
                      </form>
                    </td>
                    <td>
                      <form
                        action="/admin/deleteTeacher/<%= teacher._id %>"
                        method="post"
                      >
                        <button type="submit" class="icon-button">
                          <i class="fa-solid fa-trash"></i>
                        </button>
                      </form>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
              <div class="">
                <button
                  type="button"
                  style="float: right"
                  class="btn btn-primary popup-btn add-teacher"
                >
                  <i class="fa-solid fa-plus"></i> Add More
                </button>
              </div>
            </section>
          </div>
        </section>

        <section class="section students" id="students">
          <h3 class="section-header">Students</h3>
          <div class="section-in">
            <section class="table__body">
              <table>
                <thead>
                  <tr>
                    <th>Student ID</th>
                    <th>Username</th>
                    <th>Name</th>
                    <th>Mobile</th>
                    <th>View</th>
                    <th>Delete</th>
                  </tr>
                </thead>
                <tbody>
                  <% students.forEach(student=>{ %>
                  <tr>
                    <td><%= student._id %></td>
                    <td><%= student.username %></td>
                    <td>
                      <!-- <img src="./assets/images/admin1.jpg" alt="" />Shiv Sagar -->
                      <%= student.name %>
                    </td>
                    <td><%= student.mobile %></td>
                    <td>
                      <form
                        action="/view/student/<%= student._id %>"
                        method="post"
                      >
                        <button type="submit" class="icon-button">
                          <i class="fa-solid fa-eye"></i>
                        </button>
                      </form>
                    </td>
                    <td>
                      <form
                        action="/admin/deleteStudent/<%= student._id %>"
                        method="post"
                      >
                        <button type="submit" class="icon-button">
                          <i class="fa-solid fa-trash"></i>
                        </button>
                      </form>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
              <div class="">
                <button
                  type="button"
                  style="float: right"
                  class="btn btn-primary popup-btn add-student"
                >
                  <i class="fa-solid fa-plus"></i> Add More
                </button>
              </div>
            </section>
          </div>
        </section>

        <section class="section courses" id="courses">
          <h3 class="section-header">Courses</h3>
          <div class="section-in">
            <section class="table__body">
              <table>
                <thead>
                  <tr>
                    <th>Course ID</th>
                    <th>Name</th>
                    <th>Semesters</th>
                    <th>Credits</th>
                    <th>View</th>
                  </tr>
                </thead>
                <tbody>
                  <% courses.forEach((course)=>{ %>
                  <tr>
                    <td><%= course.courseId %></td>
                    <td><%= course.courseName %></td>
                    <td><%= course.totalSems %></td>
                    <td><%= course.totalCredits %></td>
                    <td>
                      <form
                        action="/admin/deleteCourse/<%= course._id %>"
                        method="post"
                      >
                        <button type="submit" class="icon-button">
                          <i class="fa-solid fa-trash"></i>
                        </button>
                      </form>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
              <div class="">
                <button
                  type="button"
                  style="float: right"
                  class="btn btn-primary popup-btn add-course"
                >
                  <i class="fa-solid fa-plus"></i> Add More
                </button>
              </div>
            </section>
          </div>
        </section>

        <section class="section time-table" id="time-table">
          <h3 class="section-header">Time Table</h3>
          <div class="section-in">
            <section class="table__body">
              <table style="border: none">
                <thead>
                  <tr>
                    <th>Class</th>
                    <th>Updated</th>
                    <th>View</th>
                    <th>Delete</th>
                  </tr>
                </thead>
                <tbody>
                  <% timeTables.forEach(timeTable=>{ %>
                  <tr>
                    <td><%= timeTable.course %> <%= timeTable.semsester %></td>
                    <td><%= timeTable.updateDate %></td>
                    <td>
                      <form
                        action="/admin/viewTimeTable/<%= timeTable._id %>"
                        method="post"
                      >
                        <button type="submit" class="icon-button">
                          <i class="fa-solid fa-eye"></i>
                        </button>
                      </form>
                    </td>
                    <td>
                      <form
                        action="/admin/deleteTimeTable/<%= timeTable._id %>"
                        method="post"
                      >
                        <button type="submit" class="icon-button">
                          <i class="fa-solid fa-trash"></i>
                        </button>
                      </form>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
              <div class="">
                <button
                  type="button"
                  style="float: right"
                  class="btn btn-primary popup-btn add-time-table"
                >
                  <i class="fa-solid fa-plus"></i> Add More
                </button>
              </div>
            </section>
          </div>
        </section>

        <section class="section notice" id="notice">
          <h3 class="section-header">Notice</h3>
          <div class="section-in">
            <section class="table__body">
              <table>
                <thead>
                  <tr>
                    <th>Date</th>
                    <th>Notice Name</th>
                    <th>Notice For</th>
                    <th>View</th>
                    <th>Delete</th>
                  </tr>
                </thead>
                <tbody>
                  <% notices.forEach(notice=>{ %>
                  <tr>
                    <td><%= notice.noticeDate %></td>
                    <td><%= notice.noticeName %></td>
                    <td><%= notice.noticeFor %></td>
                    <td>
                      <form
                        action="/view/notice/<%= notice._id %>"
                        method="post"
                      >
                        <button type="submit" class="icon-button">
                          <i class="fa-solid fa-eye"></i>
                        </button>
                      </form>
                    </td>
                    <td>
                      <form
                        action="/admin/deleteNotice/<%= notice._id %>"
                        method="post"
                      >
                        <button type="submit" class="icon-button">
                          <i class="fa-solid fa-trash"></i>
                        </button>
                      </form>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
              <div class="">
                <button
                  type="button"
                  style="float: right"
                  class="btn btn-primary popup-btn add-notice"
                >
                  <i class="fa-solid fa-plus"></i> Add More
                </button>
              </div>
            </section>
          </div>
        </section>

        <section class="section events" id="events">
          <h3 class="section-header">Events</h3>
          <div class="section-in">
            <div id="calendar"></div>
          </div>
          <button
            type="button"
            style="float: right"
            class="btn btn-primary popup-btn add-event"
          >
            <i class="fa-solid fa-plus"></i> New Event
          </button>
        </section>

        <section class="section change-password" id="change-password">
          <h3 class="section-header">Change Password</h3>
          <div class="section-in">
            <form action="/admin/changePassword" method="post">
              <div class="form-group">
                <label for="oldPassword">Old Password</label>
                <input
                  type="password"
                  id="oldPassword"
                  name="oldPassword"
                  required
                />
              </div>
              <div class="form-group">
                <label for="password">New Password</label>
                <input
                  type="password"
                  id="newpassword"
                  name="newpassword"
                  required
                />
              </div>
              <div class="form-group">
                <label for="confirmPassword">Re-Enter Password</label>
                <input
                  type="password"
                  id="confirmPassword"
                  name="confirmPassword"
                  required
                />
              </div>
              <span id="validateMessage"></span>
              <div class="form-group">
                <input type="submit" value="Change Password" id="chnagePass" disabled/>
              </div>
            </form>
